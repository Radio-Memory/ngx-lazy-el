{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@juristr/ngx-lazy-el": [
        "libs/ngx-lazy-el/src/index.ts"
      ]
    },
    "rootDir": ".",
    "useDefineForClassFields": false
  },
  "exclude": ["node_modules", "tmp"]
}
